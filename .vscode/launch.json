{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "train",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/koifish",
            "args": [
                "./cases/gpt2/gpt_774M.json"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "logging": {
                "trace": true,
                "traceResponse": true
            },
            "preLaunchTask": "sh2",
            "miDebuggerPath": "/usr/bin/gdb",            
        },        
         
        {
            "name": "losscurve",
            "type": "debugpy",
            "request": "launch",
            "program": "cases/loss_curve.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {"PYTHONPATH": "$PYTHONPATH:${workspaceFolder}"}, 
            "args": [
                "--train","log/0227/Train@[edu_fineweb1B]_info_.csv",
                "--eval","log/0227/Eval@[edu_fineweb1B]_info_.csv",
                "--hellaswag","log/0227/Eval@[HellaSwag]_info_.csv"
            ],
        },  
    ]
}